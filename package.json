{
  "name": "Palindrome",
  "version": "1.0.0",
  "description": "Highlight words that are palindromes",
  "main": "client/index.html",
  "scripts": {
    "make-dev": "grunt make:dev",
    "make-pro": "grunt make:pro",
    "watch-start": "grunt watch",
    "watch-stop": "kill -9 `ps aux | grep -w grunt | grep -v grep | awk '{print $2}'`",
    "predev-start": "npm run make-dev",
    "dev-start": "npm run watch-start & nodemon index.js",
    "link-app": "ln -s ../src node_modules/app",
    "link-server": "ln -s ../server node_modules/server",
    "postinstall": "npm run link-app && npm run link-server && npm run make-dev",
    "start": "node index.js &",
    "stop": "kill -9 `ps aux | grep 'node index' | grep -v grep | awk '{print $2}'`",
    "test": "grunt test"
  },
  "author": "Peter Herbert (p-herbert)",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "express": "^4.14.1",
    "load-grunt-tasks": "^3.5.2",
    "lodash": "^4.17.2",
    "nlp_compromise": "^6.5.3",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "chai-things": "^0.2.0",
    "eslint": "^3.3.1",
    "grunt": "^1.0.1",
    "grunt-babel": "^6.0.0",
    "grunt-browserify": "^5.0.0",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-cssmin": "^1.0.2",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-env": "^0.4.4",
    "grunt-mocha": "^1.0.2",
    "mocha": "^3.0.2",
    "nodemon": "^1.11.0"
  }
}
