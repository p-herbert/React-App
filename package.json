{
  "name": "React-App",
  "version": "1.0.0",
  "description": "A basic React application",
  "main": "client/index.html",
  "scripts": {
    "make-dev": "grunt make:dev",
    "make-pro": "grunt make:pro",
    "watch-start": "grunt watch",
    "watch-stop": "kill -9 `ps aux | grep -w grunt | grep -v grep | awk '{print $2}'`",
    "predev-start": "npm run make-dev",
    "dev-start": "npm run watch-start & nodemon server/index.js",
    "db-drop": "if psql -lqt | cut -d \\| -f 1 | grep -qw greetings; then psql -c 'drop database greetings;'; fi",
    "db-create": "psql -c 'create database greetings;'",
    "db-make": "npm run db-drop && npm run db-create",
    "db-start": "brew services start postgresql",
    "db-stop": "brew services stop postgresql",
    "postinstall": "ln -s ../src node_modules/app && ln -s ../db node_modules/db && ln -s ../server node_modules/server && npm run db-make",
    "start": "node server/index.js",
    "stop": "kill -9 `ps aux | grep 'node server' | grep -v grep | awk '{print $2}'`",
    "test": "grunt test"
  },
  "author": "You!",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "express": "^4.14.1",
    "load-grunt-tasks": "^3.5.2",
    "lodash": "^4.17.2",
    "pg": "^6.1.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "sequelize": "^3.30.2",
    "whatwg-fetch": "^2.0.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "chai-things": "^0.2.0",
    "eslint": "^3.3.1",
    "grunt": "^1.0.1",
    "grunt-babel": "^6.0.0",
    "grunt-browserify": "^5.0.0",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-cssmin": "^1.0.2",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-env": "^0.4.4",
    "grunt-mocha": "^1.0.2",
    "mocha": "^3.0.2",
    "nodemon": "^1.11.0"
  }
}
